{%extends "layout.njk"%}

{% block main %}
  <link rel="stylesheet" href="/receita.css">

  <!-- INICIO MAIN -->
  <main>

    <section>
      <div class='receita'>
        <img class="img-fluid" src="{{receita.image}}" alt="{{receita.title}}">
      </div>

      <div class="receita-titulo">{{receita.title}}</div>
    </div>

    <div class="receita-autor">por {{receita.author}}</div>
  </div>
</section>

<!-- INICIO RECEITA -->
<section>
  <div class='ingredientes'>

    <h3>Ingredientes</h3>
    
    <ul>

      {%for ingredient in receita.ingredients%}
        <li>
          <span>
            {{ingredient}};
          </span>
        </li>
          
      {%endfor%}
        
    </ul>

        <h3 >Modo de Preparo</h3>
        <button type="button" class="button">Esconder</button>
        <span id="modo-de-preparo">
          {{receita.preparation}}</span>

        <h3>Informações Adicionais</h3>
        <span>{{receita.information}}
        </span>

    </div>
  </section>
  <!--FIM RECEITA-->
    <script src="/script.js"></script>
</main>

{% endblock main %}