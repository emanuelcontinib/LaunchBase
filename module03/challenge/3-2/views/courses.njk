{%extends "layout.njk"%}

<!DOCTYPE html>
<html lang="en">

    {% block head %}
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Primeiro Servidor</title>

            <link rel="icon" href="/img/favicon.ico" type="favicon.ico"/>
            <link rel="stylesheet" href="courses.css">
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        {% endblock head %}

        {% block content %}
            <section class="cards">
                {%for item in items%}
                <section id={{item.id}} class="card">
                    <div id="number">{{item.number}}
                    </div>
                    <img src='{{item.img}}'>
                    <div class="description">
                        <h3>{{item.h3}}</h3>
                    </div>
                    <div class="info">
                        <h3 class="modules">
                            {{item.modules}}
                        </h3>
                        <h3 class="coast">{{item.coast}}</h3>
                    </div>
                </section>
                {%endfor%}

            </section>

        <div class="modal-overlay">
            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>
                <div class="modal-content">
                    <iframe src="" frameborder="0"></iframe>
                </div>
            </div>
        </div>

        {% endblock content %}